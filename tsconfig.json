{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "baseUrl": "src",
        "jsx": "react",
        "noImplicitAny": true,
        "strict": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": ["dom", "es2016", "es2017.object"],
        "sourceMap": false,
        "allowJs": true,
        "paths": {
            "@src/*": ["*"]
        }
    },
    "include": ["src/**/*.*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
